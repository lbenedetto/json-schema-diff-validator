{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$defs": {
    "Foo": {
      "type": "object",
      "properties": {
        "bar": {
          "type": "number"
        }
      },
      "required": [
        "bar"
      ]
    },
    "Something": {
      "type": "object",
      "properties": {
        "stuff": {
          "type": "number"
        }
      },
      "required": [
        "stuff"
      ]
    }
  },
  "type": "object",
  "properties": {
    "foo": {
      "anyOf": [
        {
          "type": "null"
        },
        {
          "$ref": "#/$defs/Foo"
        }
      ]
    },
    "something": {
      "anyOf": [
        {
          "type": "null"
        },
        {
          "$ref": "#/$defs/Something"
        }
      ]
    },
    "baz": {
      "type": "string"
    }
  },
  "required": [
    "baz"
  ]
}
