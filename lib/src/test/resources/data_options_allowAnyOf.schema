{
  "$schema": "http://json-schema.org/draft-07/schema",
  "description": "Sample schema for allowAnyOf option",
  "$ref": "#/definitions/root",
  "definitions": {
    "root": {
      "type": "array",
      "minItems": 1,
      "items": {
        "anyOf": [
          {
            "type": "string"
          }
        ]
      }
    },
    "anotherItem": {
      "type": "object",
      "content": {
        "type": "array",
        "items": [
          {
            "anyOf": [
              {
                "fruit": "banana"
              },
              {
                "fruit": "apple"
              }
            ]
          },
          {
            "anyOf": [
              {
                "coffee": "espresso"
              },
              {
                "coffee": "flat white"
              }
            ]
          }
        ]
      }
    },
    "inline_node": {
      "anyOf": [
        {
          "$ref": "#/definitions/text_node"
        }
      ]
    },
    "text_node": {
      "type": "object",
      "properties": {
        "type": {
          "const": "text"
        },
        "text": {
          "type": "string",
          "minLength": 1
        },
        "marks": {
          "type": "array"
        }
      },
      "required": [
        "type",
        "text"
      ],
      "additionalProperties": false
    },
    "hardBreak_node": {
      "type": "object",
      "properties": {
        "type": {
          "const": "hardBreak"
        },
        "attrs": {
          "type": "object",
          "properties": {
            "text": {
              "const": "\n"
            }
          },
          "additionalProperties": false
        }
      },
      "required": [
        "type"
      ],
      "additionalProperties": false
    }
  }
}
