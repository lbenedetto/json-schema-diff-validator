{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$defs": {
    "Foo": {
      "type": "object",
      "properties": {
        "bar": {
          "type": "number"
        }
      },
      "required": [
        "bar"
      ]
    },
    "AnotherFoo": {
      "type": "object",
      "properties": {
        "anotherBar": {
          "type": "boolean"
        }
      },
      "required": [
        "anotherBar"
      ]
    }
  },
  "type": "object",
  "properties": {
    "foo": {
      "anyOf": [
        {
          "type": "null"
        },
        {
          "$ref": "#/$defs/Foo"
        }
      ]
    },
    "anotherFoo": {
      "$ref": "#/$defs/AnotherFoo"
    },
    "baz": {
      "type": [
        "number",
        "null"
      ]
    },
    "anotherBaz": {
      "type": "boolean"
    }
  },
  "required": [
    "anotherFoo",
    "anotherBaz"
  ]
}
